---
import HeaderLink from './HeaderLink.astro';
// import Search from './Search.astro';
import LogoTitle from './LogoTitle.astro';
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'header'>;

const { class: classname, ...props } = Astro.props;
---

<header
  class:list={[
    'text-base shadow-sm bg-white flex items-center w-full',
    classname,
  ]}
  {...props}
>
  <nav
    class='flex flex-auto px-4 py-2 justify-between self-center lg:px-8 lg:mx-auto'
  >
    <LogoTitle />
    <div class='items-center gap-x-6 flex-auto link-omit hidden md:flex'>
      <HeaderLink href='/blog'>博客</HeaderLink>
      <!-- <HeaderLink href='/doc'>文档</HeaderLink> -->
      <HeaderLink href='/about'>关于</HeaderLink>
    </div>
  </nav>
</header>
